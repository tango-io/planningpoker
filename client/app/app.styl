//Global style

div[ng-view]
  height: 100%

#container{
  min-height: calc(100% - 220px);
}

.button.showy
  background: buttonColorS
  &[disabled]
    background: desaturate(buttonColorS, 30%)
    &:hover
      background: desaturate(buttonColorS, 30%)
  &:hover
    background: saturate(lighten(buttonColorS, 20%), 30%)
  &:active
    background: lighten(buttonColorS, 20%)
  &:focus
    background: lighten(buttonColorS, 20%)

button.button
  background: buttonColor
  &[disabled]
    background: desaturate(buttonColor, 30%)
    &:hover
      background: desaturate(buttonColor, 30%)
  &:hover
    background: saturate(lighten(buttonColor, 20%), 30%)
  &:active
    background: lighten(buttonColor, 20%)
  &:focus
    background: lighten(buttonColor, 20%)

.row-with-padding
  padding-top:30px

textarea[disabled],
input[disabled]
  background: steadyGray

table
  tbody tr td
    line-height: .7rem
  thead, tfoot
    background: steadyGray

.active
  background: active;

.success
  color: green

.error
  color: red


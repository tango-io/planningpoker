include ../templates/header.jade
#container(ng-init="init()")

.header
  .row
    .large-12.text-center.columns
      img(src='img/header-id.png', alt='Header BG')
      h2.hide-for-small-only
        | Online virtual and co-located agile teams use this application during ther planning/pointing sessiones to effectively communicate points for stories

.session
  .row
    .large-6.medium-6.columns
      .card.wow.fadeInUp(data-wow-delay='0.1s')
        .title
          h2 Create a new session
          h6 Some cool subtitle
        .body
          div(name="startSessionForm" novalidate)
            .input-field
              input#username(type="text" name="username" ng-model="currentUser.username" required)
              span.error(ng-show="submitted && startSessionForm.$invalid") Please enter a username
              label(for='username') Enter a username
            select
              option(value='', disabled='', selected='') Type of session
              option(value='pointing') Pointing session
              option(value='retro') Retrospective session
            select
              option(value='', disabled='', selected='') Type of player
              option(value='player') Player
              option(value='sm') Scrum master
          .text-right
            a.hilightbtn.button(href='#') START
    .large-6.medium-6.columns
      .card.wow.fadeInUp(data-wow-delay='0.2s')
        .title
          h2 Join a session
          h6 Some cool subtitle
        .body
          .input-field
            input#join_username.validate(type='text')
            label(for='join_username') Enter a username
          .input-field
            input#join_id.validate(type='text')
            label(for='join_id') Enter a session ID
          select
            option(value='', disabled='', selected='') Type of player
            option(value='player') Player
            option(value='sm') Scrum master
          .text-right
            a.hilightbtn.button(href='#') JOIN

  .row.separator
    .large-5.columns.join
      .row.row-with-padding
        .large-10.large-centered.columns
          h3 Join Session
          form(name="joinSessionForm" novalidate)
            input(type="text" name="username" ng-model="currentUser_.username" placeholder="Enter a username" required)
            span.error(ng-show="submitted_ && joinSessionForm.username.$invalid") Please enter a username
            input(type="text" name="sessionId" ng-model="sessionId" placeholder="Enter a session id" required)
            span.error(ng-show="submitted_ && joinSessionForm.sessionId.$invalid") Please enter a session id
          .row.collapse
            .large-8.columns
              select(ng-model="currentUser_.type")
                option(value="player") Player
                option(value="moderator") Scrum Master / Moderator
            .large-4.columns
              button.button.showy.postfix(ng-click="joinSession()") Join
    .large-5.columns.start
      .row.row-with-padding
        .large-10.large-centered.columns
          h3 Start Session
          form(name="startSessionForm" novalidate)
            input(type="text" name="username" ng-model="currentUser.username" placeholder="Enter a username" required)
            span.error(ng-show="submitted && startSessionForm.$invalid") Please enter a username
            select(ng-model="sessionType")
              option(value="pointing") Pointing Session
              option(value="retrospective") Retrospective Session
          .row.collapse
            .large-8.columns
              select(ng-model="currentUser.type")
                option(value="player") Player
                option(value="moderator") Scrum Master / Moderator
            .large-4.columns
              button.button.showy.postfix(ng-click="startSession()") Start


